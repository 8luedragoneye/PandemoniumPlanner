// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  name      String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdActivities Activity[] @relation("ActivityCreator")
  signups          Signup[]

  @@map("users")
}

model Activity {
  id          String   @id @default(cuid())
  name        String
  date        DateTime
  massupTime  DateTime?
  description String
  status      String   @default("recruiting") // recruiting, full, running
  type        String   @default("regular") // regular, transport
  zone        String?
  minEquip    String?  // T4, T5, T6, T7, T8, T9, T10, T11
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator User @relation("ActivityCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  roles   Role[]
  signups Signup[]
  pairs   TransportPair[]

  @@map("activities")
}

model Role {
  id         String   @id @default(cuid())
  activityId String
  name       String
  slots      Int
  attributes String   @default("{}") // JSON string
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  signups  Signup[]

  @@map("roles")
}

model Signup {
  id         String   @id @default(cuid())
  activityId String
  roleId     String
  playerId   String
  attributes String   @default("{}") // JSON string
  comment    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  role     Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  player   User     @relation(fields: [playerId], references: [id], onDelete: Cascade)
  fighterPairs TransportPair[] @relation("FighterPair")
  transporterPairs TransportPair[] @relation("TransporterPair")

  @@map("signups")
}

model TransportPair {
  id            String   @id @default(cuid())
  activityId    String
  fighterId     String   // Signup ID
  transporterId String   // Signup ID
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  activity    Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  fighter     Signup   @relation("FighterPair", fields: [fighterId], references: [id], onDelete: Cascade)
  transporter Signup   @relation("TransporterPair", fields: [transporterId], references: [id], onDelete: Cascade)

  @@unique([activityId, fighterId])
  @@unique([activityId, transporterId])
  @@map("transport_pairs")
}
