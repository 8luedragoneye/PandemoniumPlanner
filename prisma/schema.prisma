// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  name      String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdActivities Activity[] @relation("ActivityCreator")
  createdPremadeActivities PremadeActivity[] @relation("PremadeActivityCreator")
  signups          Signup[]
  fillProvider      FillProvider?

  @@map("users")
}

model Activity {
  id            String   @id @default(cuid())
  name          String
  date          DateTime
  massupTime    DateTime?
  description   String
  status        String   @default("recruiting") // recruiting, full, running
  type          String   @default("regular") // regular, transport
  activityTypes String   @default("[]") // JSON array of activity type strings
  zone          String?
  minEquip      String?  // T4, T5, T6, T7, T8, T9, T10, T11
  creatorId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  creator User @relation("ActivityCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  roles   Role[]
  signups Signup[]
  pairs   TransportPair[]
  fillAssignments FillAssignment[]
  fillProviderPoints FillProviderPoints[]

  @@map("activities")
}

model Role {
  id         String   @id @default(cuid())
  activityId String
  name       String
  slots      Int
  attributes String   @default("{}") // JSON string
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  signups  Signup[]

  @@map("roles")
}

model Signup {
  id         String   @id @default(cuid())
  activityId String
  roleId     String
  playerId   String
  attributes String   @default("{}") // JSON string
  comment    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  role     Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  player   User     @relation(fields: [playerId], references: [id], onDelete: Cascade)
  fighterPairs TransportPair[] @relation("FighterPair")
  transporterPairs TransportPair[] @relation("TransporterPair")

  @@map("signups")
}

model TransportPair {
  id            String   @id @default(cuid())
  activityId    String
  fighterId     String   // Signup ID
  transporterId String   // Signup ID
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  activity    Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  fighter     Signup   @relation("FighterPair", fields: [fighterId], references: [id], onDelete: Cascade)
  transporter Signup   @relation("TransporterPair", fields: [transporterId], references: [id], onDelete: Cascade)
  fillAssignments FillAssignment[]

  @@unique([activityId, fighterId])
  @@unique([activityId, transporterId])
  @@map("transport_pairs")
}

model FillProvider {
  id            String   @id @default(cuid())
  userId        String   @unique
  providesSlots Boolean  @default(false)
  providesWeight Boolean @default(false)
  slotOrigin    String?
  slotTarget    String?
  weightOrigin  String?
  weightTarget  String?
  isActive      Boolean  @default(true)
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignments FillAssignment[]
  points     FillProviderPoints[]

  @@map("fill_providers")
}

model FillAssignment {
  id            String   @id @default(cuid())
  activityId    String
  pairId        String   // TransportPair ID
  providerId    String   // FillProvider ID
  fillType      String   // "slots" or "weight"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  activity Activity     @relation(fields: [activityId], references: [id], onDelete: Cascade)
  pair     TransportPair @relation(fields: [pairId], references: [id], onDelete: Cascade)
  provider FillProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([activityId, pairId, providerId, fillType])
  @@map("fill_assignments")
}

model FillProviderPoints {
  id            String   @id @default(cuid())
  providerId    String
  activityId    String?
  points        Int      @default(0)
  reason        String   // "session_participation", "assignment", "problem"
  notes         String?
  createdAt     DateTime @default(now())

  provider FillProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  activity Activity?    @relation(fields: [activityId], references: [id], onDelete: SetNull)

  @@map("fill_provider_points")
}

model PremadeActivity {
  id          String   @id @default(cuid())
  name        String
  description String
  type        String   @default("regular") // regular, transport
  zone        String?
  minEquip    String?  // T4, T5, T6, T7, T8, T9, T10, T11
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator User          @relation("PremadeActivityCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  roles   PremadeRole[]

  @@map("premade_activities")
}

model PremadeRole {
  id                String   @id @default(cuid())
  premadeActivityId String
  name              String
  slots             Int
  attributes        String   @default("{}") // JSON string
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  premadeActivity PremadeActivity @relation(fields: [premadeActivityId], references: [id], onDelete: Cascade)

  @@map("premade_roles")
}
